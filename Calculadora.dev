DOCTYPE html>
<html lang="pt-br">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Calculadora Simples</title>

<style>
body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f4f4f4;
    font-family: Arial;
}

.calculadora {
    background: black;
    padding: 20px;
    border-radius: 15px;
    width: 250px;
}

#resultado {
    width: 100%;
    height: 50px;
    font-size: 20px;
    margin-bottom: 10px;
    text-align: right;
    padding: 5px;
}

button {
    width: 55px;
    height: 55px;
    font-size: 18px;
    margin: 3px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
}

.numero {
    background: orange;
}

.operador {
    background: gray;
    color: white;
}

.igual {
    background: blue;
    color: white;
}
</style>
</head>

<body>

<div class="calculadora">
    <input type="text" id="resultado" disabled>

    <button class="numero" onclick="adicionar('7')">7</button>
    <button class="numero" onclick="adicionar('8')">8</button>
    <button class="numero" onclick="adicionar('9')">9</button>
    <button class="operador" onclick="adicionar('/')">÷</button>

    <button class="numero" onclick="adicionar('4')">4</button>
    <button class="numero" onclick="adicionar('5')">5</button>
    <button class="numero" onclick="adicionar('6')">6</button>
    <button class="operador" onclick="adicionar('*')">×</button>

    <button class="numero" onclick="adicionar('1')">1</button>
    <button class="numero" onclick="adicionar('2')">2</button>
    <button class="numero" onclick="adicionar('3')">3</button>
    <button class="operador" onclick="adicionar('-')">−</button>

    <button class="numero" onclick="adicionar('0')">0</button>
    <button onclick="limpar()">C</button>
    <button class="igual" onclick="calcular()">=</button>
    <button class="operador" onclick="adicionar('+')">+</button>
</div>

<script>
function adicionar(valor) {
    document.getElementById("resultado").value += valor;
}

function limpar() {
    document.getElementById("resultado").value = "";
}

function calcular() {
    let resultado = document.getElementById("resultado").value;
    document.getElementById("resultado").value = eval(resultado);
}
</script>

</body>
</html>
